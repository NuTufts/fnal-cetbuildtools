#!/usr/bin/env perl
#
# use product_deps

use strict;
use warnings;

use File::Basename;
use lib dirname($0);

my $inputdir;

if( $#ARGV >= 0 ) {
   $inputdir = $ARGV[0];
} else {
    print "\n";
    print "ERROR: directory not specified\n";
    print "USAGE: report_gdmldir <input-directory>\n";
    print "       input-directory  = directory containing product_deps\n";
    print "\n";
    exit 1;
}

require cmake_parse_deps;

my $pfile=$inputdir."/product_deps";
my $gdml_directory = get_cmake_gdml_directory( $pfile );
print "$gdml_directory\n";

exit 0;
